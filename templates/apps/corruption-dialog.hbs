<div class="flexcol" style="padding: 0.5rem; gap: 0.5rem;">
    <div class="form-group">
        <label>{{localize "SYB5E.Corruption.Temporary"}}</label>
        <div class="form-fields">
            <input type="number" name="temp" value="{{corruption.temp}}" min="0" step="1">
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "SYB5E.Corruption.Permanent"}}</label>
        <div class="form-fields">
            <input type="number" name="permanent" value="{{corruption.permanent}}" min="0" step="1">
        </div>
    </div>
    <footer class="sheet-footer flexrow" style="margin-top: 1rem;">
        <button type="submit" name="submit">
            <i class="far fa-save"></i> Update
        </button>
    </footer>
</div>